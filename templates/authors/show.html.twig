{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
<h1 class="text-center">Les infos sur l'auteur:
	</h1>
	<section style="background-color: #eee;">
		<div class="container py-5">

			<div class="row">
				<div class="col-lg-4">
					<div class="card mb-4">
						<div class="card-body text-center">
							<img src="https://picsum.photos/1200/800?random={{ author.id }}" alt="avatar" class="img-fluid">
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card mb-4">
						<div class="card-body">
							<div class="row py-3">
								<div class="col-sm-3">
									<p class="mb-0">Nom</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0">{{ author.firstName }}
										</p>
									<!-- Afficher le prénom et le nom de l'auteur -->
								</div>
							</div><hr>
							<div class="row py-3">
								<div class="col-sm-3">
									<p class="mb-0">Prenom</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0">{{ author.lastName }}</p>
									<!-- Afficher le prénom et le nom de l'auteur -->
								</div>
							</div><hr>
							<div class="row py-3">
								<div class="col-sm-3">
									<p class="mb-0">Nombre de livres</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0">{{ author.booksCount }}</p>
								</div>
							</div>
							<hr>
						</div>
					</div>
					<div class="buttonsList d-flex justify-content-center">
						<a href="{{ path('app_authors_index') }}" class="btn btn-primary text-white mx-2" data-mdb-ripple-init>Tout voir</a>
                        {% if is_granted('ROLE_ADMIN') or (is_granted('ROLE_LIBRARIAN'))%}
						    <a href="{{ path('app_authors_edit', {'id': author.id}) }}" class="btn btn-secondary text-white mx-2" data-mdb-ripple-init>Modifier</a>
                        {% endif %}
                    </div>
				</div>
			</div>
		</div>
	</section>

    
{% endblock %}
