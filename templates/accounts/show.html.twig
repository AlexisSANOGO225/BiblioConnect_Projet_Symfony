{% extends 'base.html.twig' %}

{% block title %}Accounts{% endblock %}

{% block body %}
    <h1>Accounts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ account.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ account.roles ? account.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ account.password }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ account.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_accounts_index') }}">back to list</a>

    <a href="{{ path('app_accounts_edit', {'id': account.id}) }}">edit</a>

    {{ include('accounts/_delete_form.html.twig') }}
{% endblock %}
